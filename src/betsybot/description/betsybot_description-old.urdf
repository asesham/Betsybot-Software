<?xml version="1.0"?>
<robot name="betsybot" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Define robot constants -->

  <xacro:property name="base_width" value="0.346075"/> <!-- 13.625 inches-->
  <xacro:property name="base_length" value="0.504825"/> <!-- 19.875 inches-->
  <xacro:property name="base_height" value="0.1651"/> <!-- 6.5 inches-->

  <xacro:property name="wheel_radius" value="0.09525"/> <!-- 3.75 inches-->
  <xacro:property name="wheel_width" value="0.0508"/><!-- 2 inches-->
  <xacro:property name="wheel_ygap" value="0.041275"/><!-- 1.625 inches--> 
  <xacro:property name="wheel_zoff" value="0.05715"/> <!-- 2.25 inches--> 
  <xacro:property name="wheel_xoff" value="0.1397"/><!-- 5.5 inches-->
  
  <xacro:property name="lidar_radius" value="0.038125"/><!-- 5.5 inches-->
  <xacro:property name="lidar_length" value="0.076"/><!-- 5.5 inches-->
  <xacro:property name="hesai_centroid_y" value="-0.0298"/><!-- 5.5 inches-->
  <xacro:property name="hesai_centroid_z" value="0.0124"/><!-- 5.5 inches-->
  
  <xacro:arg name="use_nominal_extrinsics" default="true" />
  <xacro:include filename="$(find realsense2_description)/urdf/_d435i.urdf.xacro"/>
  <!--<link name="odom"/>

  <joint name="odom_joint" type="fixed">
    <parent link="odom"/>
    <child link="base_footprint"/>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>-->
<!--  <xacro:property name="caster_xoff" value="0.15875"/> 6.25 inches -->
    <!-- Robot Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>
    <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
      <origin xyz="0.0 0.0 ${(wheel_radius+wheel_zoff)}" rpy="0 0 0"/>
  </joint>
    <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect joint_type">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${prefix}_joint" type="${joint_type}">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(base_width/2+wheel_ygap)} ${-wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>
  
  <xacro:wheel prefix="drivewhl_l" x_reflect="1" y_reflect="1" joint_type="continuous"/>
  <xacro:wheel prefix="drivewhl_r" x_reflect="1" y_reflect="-1" joint_type="continuous"/>
  <xacro:wheel prefix="rearwhl_l" x_reflect="-1" y_reflect="1" joint_type="fixed"/>
  <xacro:wheel prefix="rearwhl_r" x_reflect="-1" y_reflect="-1" joint_type="fixed"/>

  <!-- *
  
              Lidar Link
  
  * -->
  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${lidar_radius}" length="${lidar_length}"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${lidar_radius}" length="${lidar_length}"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  
    <!-- Joint connecting the LiDAR to a parent link (e.g., base_link) -->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/> <!-- Replace 'base_link' with your robot's parent link -->
    <child link="base_scan"/>
    <origin xyz="${base_length/2-lidar_radius} 0 ${(base_height/2+lidar_length/2)}" rpy="0 0 0"/> <!-- Adjust position and orientation relative to parent -->
  </joint>
  
   <link name="hesai_lidar"/>
  
    <!-- Joint connecting the LiDAR to a parent link (e.g., base_scan) -->
  <joint name="hesai_joint" type="fixed">
    <parent link="base_scan"/>
    <child link="hesai_lidar"/>
    <origin xyz="0 ${hesai_centroid_y} ${hesai_centroid_z}" rpy="0 0 0"/> 
  </joint>
  <!-- Camera link -->
  
  <xacro:sensor_d435i parent="base_link" use_nominal_extrinsics="$(arg use_nominal_extrinsics)">
    <origin xyz="${base_length/2-0.006} 0 ${(base_height/2)-0.0385}" rpy="0 0 0"/>
  </xacro:sensor_d435i>

</robot>
